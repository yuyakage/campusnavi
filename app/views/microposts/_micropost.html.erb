<li id="micropost-<%= micropost.id %>">
  <%= link_to gravatar_for(micropost.user, size: 50), micropost.user %>
  <span class="user"><%= link_to micropost.user.name, micropost.user %></span><br>
  <span class="university">
    <%= micropost.university %><br>
  </span>
  <span class="faculty">
    <%= micropost.faculty %><br>
  </span>
  <span class="department">
    <%= micropost.department %><br>
  </span>
  <span class="professor">
    <%= micropost.professor %><br>
  </span>
  <span class="subject">
     <%= micropost.subject %>
  </span>
  <span class="content">
    <%= micropost.content %>
    <%= image_tag micropost.picture.url if micropost.picture? %>
  </span>
  <span class="timestamp">
    <%= time_ago_in_words(micropost.created_at) %>前に投稿
    <% if current_user?(micropost.user) %>
      <%= link_to "削除", micropost, method: :delete,
                                       data: { confirm: "本当に削除しますか?" } %>
    <% end %>
  </span>
</li>
